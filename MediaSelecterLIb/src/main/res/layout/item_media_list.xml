<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintDimensionRatio="h,1:1"
        android:id="@+id/iv_pic"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
      />
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/select_check_size"
        android:layout_height="@dimen/select_check_size"
        android:layout_margin="@dimen/select_check_text_size"
        android:gravity="center"
        android:textColor="@color/select_text_color"
        android:background="@drawable/picture_selected"
        android:id="@+id/tv_check"
        >
    </TextView>
    <View
        android:layout_height="0dp"
        android:background="@color/black_shadow"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_pic"
        />
    <TextView
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic"
        android:id="@+id/tv_duration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/picture_icon_shadow_bg"
        android:drawableLeft="@mipmap/picture_icon_video"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>